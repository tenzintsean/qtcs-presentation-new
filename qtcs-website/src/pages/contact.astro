---
import PageLayout from '../layouts/PageLayout.astro';
const base = import.meta.env.BASE_URL;
---

<PageLayout title="Contact QTCS - Get in Touch" currentPage={`${base}contact`}>
  <section class="py-16 md:py-24">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <!-- Header -->
      <div class="text-center mb-12 md:mb-16">
        <h1 class="text-4xl md:text-5xl lg:text-6xl font-bold text-white mb-6">
          Get in <span class="text-accent-orange">Touch</span>
        </h1>
        <p class="text-lg md:text-xl text-text-secondary max-w-2xl mx-auto">
          Have questions about our electric vehicles? We're here to help.
          Reach out and let's discuss how QTCS can meet your mobility needs.
        </p>
      </div>

      <div class="grid lg:grid-cols-2 gap-12">
        <!-- Contact Form -->
        <div class="glass-strong rounded-2xl p-8">
          <h2 class="text-2xl font-bold text-white mb-6">Send us a Message</h2>
          <form id="contact-form" class="space-y-6">
            <div class="grid sm:grid-cols-2 gap-4">
              <div>
                <label for="name" class="block text-sm font-medium text-text-secondary mb-2">
                  Full Name *
                </label>
                <input
                  type="text"
                  id="name"
                  name="name"
                  required
                  class="w-full px-4 py-3 bg-glass-bg border border-glass-border rounded-lg text-white placeholder-text-muted focus:outline-none focus:ring-2 focus:ring-accent-orange"
                  placeholder="Your name"
                />
              </div>
              <div>
                <label for="phone" class="block text-sm font-medium text-text-secondary mb-2">
                  Phone Number *
                </label>
                <input
                  type="tel"
                  id="phone"
                  name="phone"
                  required
                  class="w-full px-4 py-3 bg-glass-bg border border-glass-border rounded-lg text-white placeholder-text-muted focus:outline-none focus:ring-2 focus:ring-accent-orange"
                  placeholder="+91 XXXXX XXXXX"
                />
              </div>
            </div>

            <div>
              <label for="email" class="block text-sm font-medium text-text-secondary mb-2">
                Email Address *
              </label>
              <input
                type="email"
                id="email"
                name="email"
                required
                class="w-full px-4 py-3 bg-glass-bg border border-glass-border rounded-lg text-white placeholder-text-muted focus:outline-none focus:ring-2 focus:ring-accent-orange"
                placeholder="your@email.com"
              />
            </div>

            <div>
              <label for="interest" class="block text-sm font-medium text-text-secondary mb-2">
                I'm interested in
              </label>
              <select
                id="interest"
                name="interest"
                class="w-full px-4 py-3 bg-glass-bg border border-glass-border rounded-lg text-white focus:outline-none focus:ring-2 focus:ring-accent-orange"
              >
                <option value="">Select an option</option>
                <option value="l3-vehicles">L3 Vehicles</option>
                <option value="l5-vehicles">L5 Vehicles</option>
                <option value="e-bus">E-Bus</option>
                <option value="fleet">Fleet Solutions</option>
                <option value="dealership">Dealership Opportunity</option>
                <option value="other">Other</option>
              </select>
            </div>

            <div>
              <label for="message" class="block text-sm font-medium text-text-secondary mb-2">
                Message *
              </label>
              <textarea
                id="message"
                name="message"
                rows="4"
                required
                class="w-full px-4 py-3 bg-glass-bg border border-glass-border rounded-lg text-white placeholder-text-muted focus:outline-none focus:ring-2 focus:ring-accent-orange resize-none"
                placeholder="Tell us about your requirements..."
              ></textarea>
            </div>

            <button
              type="submit"
              class="w-full px-6 py-4 bg-accent-orange text-white font-semibold text-lg rounded-lg hover:bg-accent-gold transition-colors duration-200"
            >
              Send Message
            </button>
          </form>
        </div>

        <!-- Contact Information -->
        <div class="space-y-8">
          <!-- Quick Contact Cards -->
          <div class="grid sm:grid-cols-2 gap-4">
            <div class="glass rounded-xl p-6">
              <div class="w-12 h-12 bg-accent-orange/20 rounded-full flex items-center justify-center mb-4">
                <svg class="w-6 h-6 text-accent-orange" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z" />
                </svg>
              </div>
              <h3 class="text-lg font-semibold text-white mb-2">Call Us</h3>
              <p class="text-text-secondary">+91 XXXXX XXXXX</p>
              <p class="text-text-muted text-sm mt-1">Mon-Sat: 9AM - 6PM</p>
            </div>

            <div class="glass rounded-xl p-6">
              <div class="w-12 h-12 bg-trust-blue/20 rounded-full flex items-center justify-center mb-4">
                <svg class="w-6 h-6 text-sky-light" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z" />
                </svg>
              </div>
              <h3 class="text-lg font-semibold text-white mb-2">Email Us</h3>
              <p class="text-text-secondary">info@qtcs.in</p>
              <p class="text-text-muted text-sm mt-1">We reply within 24 hours</p>
            </div>
          </div>

          <!-- Office Address -->
          <div class="glass-strong rounded-2xl p-8">
            <div class="flex items-start gap-4 mb-6">
              <div class="w-12 h-12 bg-highlight-green/20 rounded-full flex items-center justify-center flex-shrink-0">
                <svg class="w-6 h-6 text-highlight-green" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z" />
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z" />
                </svg>
              </div>
              <div>
                <h3 class="text-lg font-semibold text-white mb-2">Head Office</h3>
                <p class="text-text-secondary leading-relaxed">
                  Quick Turn Consultancy Solutions<br />
                  [Address Line 1]<br />
                  [City, State - PIN Code]<br />
                  India
                </p>
              </div>
            </div>

            <!-- Map Placeholder -->
            <div class="bg-glass-bg rounded-xl h-48 flex items-center justify-center">
              <p class="text-text-muted text-sm">Interactive Map Coming Soon</p>
            </div>
          </div>

          <!-- Why Contact Us -->
          <div class="glass rounded-xl p-6">
            <h3 class="text-lg font-semibold text-white mb-4">What to Expect</h3>
            <ul class="space-y-3">
              <li class="flex items-center gap-3 text-text-secondary">
                <svg class="w-5 h-5 text-accent-orange flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
                </svg>
                Quick response within 24 hours
              </li>
              <li class="flex items-center gap-3 text-text-secondary">
                <svg class="w-5 h-5 text-accent-orange flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
                </svg>
                Free consultation call
              </li>
              <li class="flex items-center gap-3 text-text-secondary">
                <svg class="w-5 h-5 text-accent-orange flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
                </svg>
                Customized vehicle recommendations
              </li>
              <li class="flex items-center gap-3 text-text-secondary">
                <svg class="w-5 h-5 text-accent-orange flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
                </svg>
                Detailed pricing and financing options
              </li>
            </ul>
          </div>
        </div>
      </div>
    </div>
  </section>
</PageLayout>

<script>
  const form = document.getElementById('contact-form');
  form?.addEventListener('submit', (e) => {
    e.preventDefault();
    // TODO: Implement form submission
    alert('Thank you for your message! We will get back to you soon.');
    form.reset();
  });
</script>
